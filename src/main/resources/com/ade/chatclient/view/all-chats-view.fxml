<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="400.0" stylesheets="@../styles/ChatPageViewStyle.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ade.chatclient.view.AllChatsView">
    <BorderPane prefHeight="600.0" prefWidth="400.0" styleClass="chatsPane" AnchorPane.bottomAnchor="0.0" AnchorPane.topAnchor="0.0">
    <top>
        <Group layoutY="150.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="25.0" />
            </BorderPane.margin>
            <TextField focusTraversable="false" prefHeight="50.0" prefWidth="350.0" promptText="Search">
                <padding>
                    <Insets left="70.0" />
                </padding>
            </TextField>
                            <ImageView fitHeight="30.0" fitWidth="30.0" layoutX="14.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@../img/search_icon.png" />
                            </ImageView>
            <Label layoutY="70.0" styleClass="header" text="All chats" />
            <Button fx:id="createGroupButton" layoutX="184.0" layoutY="78.0" onAction="#onNewChatClicked" styleClass="createGroupButton" text="create new group chat" />
        </Group>
    </top>
    <center>
        <ListView fx:id="chatListView" prefHeight="406.0" prefWidth="400.0" style="-fx-background-color: transparent;" styleClass="chatListView" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                                    <Insets bottom="25.0" top="25.0" />
            </BorderPane.margin>
        </ListView>
    </center>
</BorderPane>
</AnchorPane>
