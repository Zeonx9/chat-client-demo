<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="400.0" stylesheets="@../styles/AllUsersViewStyle.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ade.chatclient.view.AllUsersView">
    <BorderPane fx:id="usersPane" prefHeight="600.0" prefWidth="400.0" styleClass="mainPane" AnchorPane.bottomAnchor="0.0" AnchorPane.topAnchor="0.0">
        <center>
            <ListView fx:id="userListView" prefHeight="406.0" prefWidth="400.0" styleClass="listChats" BorderPane.alignment="CENTER">
                <BorderPane.margin>
                    <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
                </BorderPane.margin>
            </ListView>
        </center>
        <top>
            <Group layoutY="150.0" BorderPane.alignment="CENTER">
                <BorderPane.margin>
                    <Insets top="25.0" />
                </BorderPane.margin>
                <TextField fx:id="searchUsersTextField" focusTraversable="false" prefHeight="50.0" prefWidth="350.0" promptText="Search">
                    <padding>
                        <Insets left="70.0" />
                    </padding>
                </TextField>
                <ImageView fitHeight="30.0" fitWidth="30.0" layoutX="14.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../img/search_icon.png" />
                </ImageView>
                <Label layoutY="60.0" prefHeight="28.0" prefWidth="193.0" styleClass="header" text="Select user (users)" />
            <Label layoutY="85.0" prefHeight="28.0" prefWidth="193.0" styleClass="header" text="to create chat" />
            <Button fx:id="createChatButton" layoutX="230.0" layoutY="67.0" mnemonicParsing="false" onAction="#OnCreateChatButtonClicked" prefHeight="37.0" prefWidth="120.0" styleClass="buttonCreateNewChat" text="create" />
            </Group>
        </top>
    </BorderPane>
   </AnchorPane>
