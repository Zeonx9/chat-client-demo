<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" styleClass="mainPane" stylesheets="@../styles/ChatPageViewStyle.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ade.chatclient.view.ChatPageView">
    <BorderPane prefHeight="600.0" prefWidth="80.0" styleClass="leftPane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
        <center>
            <Group BorderPane.alignment="CENTER">
                <cursor>
                    <Cursor fx:constant="DEFAULT" />
                </cursor>
                <Button fx:id="showChatsButton" layoutY="100.0" mnemonicParsing="false" onAction="#onShowChatsClicked" prefHeight="50.0" prefWidth="50.0" styleClass="showChatsBtn" />
                <Button fx:id="showUsersButton" mnemonicParsing="false" onAction="#onShowUsersClicked" prefHeight="50.0" prefWidth="50.0" styleClass="ShowUsersBtn" />
            </Group>
        </center>
    </BorderPane>

        <VBox prefHeight="600.0" prefWidth="1000.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="480.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <Label fx:id="userNameLabel" prefHeight="50.0" prefWidth="479.0" styleClass="header">
         <VBox.margin>
            <Insets left="25.0" top="20.0" />
         </VBox.margin>
      </Label>
        <ListView fx:id="messageListView" prefHeight="399.0" prefWidth="520.0" style="-fx-background-color: transparent;" styleClass="messageListView" VBox.vgrow="ALWAYS">
            <BorderPane.margin>
                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
            </BorderPane.margin>
         <VBox.margin>
            <Insets bottom="10.0" left="25.0" right="25.0" top="10.0" />
         </VBox.margin>
        </ListView>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="600.0">
                <TextField fx:id="messageTextField" focusTraversable="false" maxWidth="800.0" minWidth="400.0" prefHeight="50.0" prefWidth="400.0" promptText="Enter your message . . ." styleClass="messageInput">
                    <HBox.margin>
                        <Insets left="25.0" />
                    </HBox.margin>
                    <padding>
                        <Insets left="20.0" />
                    </padding>
                    <HBox.hgrow>
                        <Priority fx:value="ALWAYS" />
                    </HBox.hgrow>
                </TextField>
                <Button fx:id="sendButton" mnemonicParsing="false" onAction="#onSendButtonClicked" prefHeight="50.0" prefWidth="50.0" styleClass="buttonSend">
                    <HBox.margin>
                        <Insets left="20.0" right="25.0" />
                    </HBox.margin>
                </Button>
            </HBox>
    </VBox>

   <AnchorPane fx:id="switchPane" layoutX="80.0" prefHeight="600.0" prefWidth="400.0" styleClass="chatsPane" AnchorPane.bottomAnchor="0.0" AnchorPane.topAnchor="0.0" />
</AnchorPane>
